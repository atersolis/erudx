{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"lib": ["es7", "dom"],
		"esModuleInterop": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
